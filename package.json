{
	"name": "todotxt-mode",
	"displayName": "todotxt-mode",
	"description": "Commands and decorators for managing todo.txt files",
	"version": "0.0.1",
	"publisher": "davraamides",
	"engines": {
		"vscode": "^1.33.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.toggleCompletion",
				"title": "todotxt-mode: Toggle Task Completion"
			}
		],
		"keybindings": [
			{
				"command": "extension.toggleCompletion",
				"key": "ctrl+shift+x",
				"mac": "ctrl+shift+x",
				"when": "editorTextFocus"
			}
		],
		"configuration": {
			"type": "object",
			"title": "todotxt-mode configuraton",
			"properties": {
				"todotxtmode.message": {
					"type": ["string", "null"],
					"default": "Hello!",
					"description": "test message"
				},
				"todotxtmode.completedTaskStyle": {
					"type": "object",
					"description": "style for completed tasks",
					"properties": {
						"color": {
							"type": "string"
						},
				        "textDecoration": {
							"type": "string"
						},
				        "opacity": {
							"type": "string"
						}
					}
				}
			}
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/davraamides/todotxt-mode.git"
	},
	"bugs": {
		"url": "https://github.com/davraamides/todotxt-mode/issues"
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.3.1",
		"vscode": "^1.1.28",
		"tslint": "^5.12.1",
		"@types/node": "^10.12.21",
		"@types/mocha": "^2.2.42"
	}
}
